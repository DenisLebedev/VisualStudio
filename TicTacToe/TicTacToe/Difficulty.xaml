<Window x:Class="TicTacToe.Difficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Difficulty" Height="284.81" Width="300.759">
    <Grid Margin="0,0,0,119">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose a difficulty: " VerticalAlignment="Top" Margin="89,10,0,0" Height="19" Width="111"/>
        <Button x:Name="easy" Content="Easy" HorizontalAlignment="Left" Margin="110,34,0,0" VerticalAlignment="Top" Width="75" Click="easy_ButtonClick"/>
        <Button x:Name="medium" Content="Medium" HorizontalAlignment="Left" Margin="110,61,0,0" VerticalAlignment="Top" Width="75" Click="medium_ButtonClick"/>
        <Button x:Name="hard" Content="Hard" HorizontalAlignment="Left" Margin="110,88,0,0" VerticalAlignment="Top" Width="75" Click="hard_ButtonClick"/>

    </Grid>
</Window>
